<div class="message">
    <div class="avatar-container">
        <img class="chat-avatar" src="https://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest message.user.email%>" alt="">
    </div>
        <div class="msg-meta">
            <span class="message-user-name"><a href="/users/<%= message.user.id %>/profile"><%= message.user.first_name %></a></span>
            <span class="message-timestamp"><%= message.user.created_at.strftime("at %H:%M%p") %></span>
            <p><%= message.content %></p>
    </div>
</div>